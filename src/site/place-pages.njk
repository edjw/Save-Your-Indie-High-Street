---
pagination:
    data: places
    size: 1
    alias: place
    addAllPagesToCollections: true
permalink: "{{ place | slugIt | lower }}/"
layout: "layouts/place.njk"
tag: place
---

{% block content %}
    <section class="businesses_list_section">

        <h2 class="place_heading">{{ place }} businesses</h2>

        <ul class="businesses_list">
            {% for business in businesses %}

                {% if business.town_city | slug == place | slug %}

                    <li class="business_list_name">
                        <a href="{{ business.name | slugIt | lower }}">{{ business.name }}</a>
                    </li>

                {% endif %}

            {% endfor %}
        </ul>
        <section class="missing">
            <hr>
            <p>
                <strong>Is your favourite local business in {{ place }} missing?</strong>
            </p>
            <p>
                <a href="/add">
                    Add a business to this website</a>
            </p>
        </section>
    </section>
{% endblock %}